<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    tools:context="com.example.d851.myproject.Calculator">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Insulin Calculator"
    android:textSize="30sp"
    android:textColor="@color/colorMain"
    android:layout_gravity="center"/>
    <Spinner
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:dropDownSelector="@color/colorMain"
        >
    </Spinner>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amount of carbs in a 100g"
        android:textSize="25dp"
        android:textColor="@color/colorMain"
        ></TextView>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        >
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textSize="25dp"
    android:textColor="#000000"
    android:layout_weight="1"
    android:background="@android:drawable/alert_light_frame"
    android:id="@+id/tvHundred"
    />
    <Button

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="calculate"
        android:textSize="25sp"
        android:layout_weight="3"
        android:id="@+id/btCalculate"
        android:textColor="@color/colorMain"
        android:background="@drawable/custom_button" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tips"
        android:textSize="25dp"
        android:textColor="@color/colorMain"
        ></TextView>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#000000"
        android:background="@android:drawable/alert_light_frame"
        android:id="@+id/tvTips"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
    <Button
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="History"
        android:textSize="20sp"
        android:id="@+id/btHistory"
        android:textColor="@color/colorMain"
        android:background="@drawable/custom_button2"
        android:layout_weight="1"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go back"
        android:textSize="25sp"
        android:id="@+id/btBackCalc"
        android:textColor="@color/colorMain"
        android:background="@drawable/custom_button"
        android:layout_weight="3"
        android:layout_marginLeft="7dp"
      />
</LinearLayout>
</LinearLayout>
